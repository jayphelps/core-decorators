    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--compilers", "js:babel-core/register",
                "--require", "babel-polyfill",
                "${workspaceRoot}/test/**/*.spec.js",
                "--debug"
            ]
        }
    ]
}
