{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gulp",
            "task": "watch",
            "isBackground": true,
            "problemMatcher": [
                "$gulp-tsc",
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "gulp",
            "task": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}