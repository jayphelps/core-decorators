{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module":"commonjs",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "allowUnreachableCode": true,
    "lib": [
      "es5",
      "dom",
      "es2015","es2015.core", "es2015.collection"
    ],
    "baseUrl": ".",
    "paths": {
      "lib/*": ["src/*"]
    },
    "rootDirs": [
      "src", "test", "lib"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
